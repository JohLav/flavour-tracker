<div class="card m-2 col-3" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">{{ item.name }}</h5>
        <p class="card-text">{{ item.description }}</p>
        <p class="card-text">{{ item.price }}€</p>
        <a href="{{ path('items_edit', {'id': item.id}) }}" class="btn btn-primary"><i class="bi bi-pen"></i> Éditer</a>
        <a href="{{ path('items_delete', {'id': item.id}) }}" class="btn btn-danger"><i class="bi bi-trash3"></i>
            Supprimer</a>
    </div>
</div>
